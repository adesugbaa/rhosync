<a href="<%=url("user?user_id=#{CGI.escape(params[:user_id])}")%>" class='nav_button'>Back</a>
<a href='<%=url("client/delete?user_id=#{CGI.escape(params[:user_id])}&client_id=#{CGI.escape(params[:client_id])}")%>' class='nav_button'>
