<h1>Client: <%=params[:client_id]%></h1>
<%=show_errors%>
<a href="<%=url("user?user_id=#{CGI.escape(params[:user_id])}")%>" class='nav_button'>Back</a>
<a href='<%=url("client/delete?user_id=#{CGI.escape(params[:user_id])}&client_id=#{CGI.escape(params[:client_id])}")%>' class='nav_button'>
	Delete client
</a>

<h2>Client attributes</h2>
<div class='panel'>
	<table>
	<%@attributes.each do |attrib|%>
		<%if attrib['name'] != 'rho__id' and attrib['value'] and attrib['value'].size > 0%>
			<tr>
				<td><%=attrib['name']%>:</td>
				<td><%=attrib['value']%></td>
			</tr>
		<%end%>
	<%end%>
	</table>
</div>

<h2>Client documents for source:</h2>

[
<%@sources.each_index do |i|%>
	<a href="<%=url("docs?source_id=#{@sources[i]}&client_id=#{CGI.escape(params[:client_id])}&user_id=#{CGI.escape(params[:user_id])}")%>">
		<%=i==0?'':','%>"<%=@sources[i]%>"
	</a>
<%end%>
]
