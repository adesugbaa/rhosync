#!/usr/bin/env ruby

require 'rubygems'
require 'templater'
require File.join(File.dirname(__FILE__), '..', 'generators', 'rhosync')
$:.unshift File.join(File.dirname(__FILE__),'..','lib')
require 'rhosync'

# Stub this method to force 1.8 compatibility (come on templater!)
class Encoding
  def find
    "utf-8"
  end

  def dummy?
    false
  end
end

class String
  def force_encoding(enc)
    return self
  end
  def encoding
    if Encoding.responds_to?('new')
      Encoding.new()
    else
      Encoding.default_external()
    end
  end
end


Rhosync.run_cli(Dir.pwd, 'rhosync', Rhosync::VERSION, ARGV)